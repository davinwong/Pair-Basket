@import 'utility'

body
	.yellow-button
		background: #FFD300
		background-image: -webkit-linear-gradient(top, #FFD300, #FFD300)
		background-image: -moz-linear-gradient(top, #FFD300, #FFD300)
		background-image: -ms-linear-gradient(top, #FFD300, #FFD300)
		background-image: -o-linear-gradient(top, #FFD300, #FFD300)
		background-image: linear-gradient(to bottom, #FFD300, #FFD300)
		-webkit-border-radius: 5
		-moz-border-radius: 5
		border-radius: 5px
		border: 0px
		font-family: Arial
		color: black
		font-size: 16px
		padding: 5px 10px
		margin: 0px 15px
		display: block
		float: left
		// margin: 10px 5px
		text-decoration: none

	.yellow-button:hover
		opacity: 0.75
		cursor: pointer;

	#landing
		.header, .footer
			width: 100%
			height: 60px

		.questionForm
			margin: 20px 0 0 0

		.circle
			background-color: #FFD300
			border-radius: 50%
			-moz-border-radius: 50%;
			-webkit-border-radius: 50%;
			width: 55px
			height: h = 55px
			text-align: center
			padding-top: (h/3)
			font-size: 26px
			font-weight: bold
			color: #FFFFFF // yellow

		.col-md-2.circle-width
			width: 10%
			padding-left: 0px

	#dashboard

		.control-label
			font-weight: bold

		.container.main
			width: 800px
			// padding: 50px
			background: white
			// border-radius(3px)
			// container-border()

		.header
			// margin: _margin_top 0px 0px 0px
			width: 100%
			height: 60px
			background-color: #FFD300 // yellow
			// float: left

		.header-content
			width: 980px
			height: 60px
			display: block
			margin: auto

		.header-title
			display: block
			float: left
			height: 60px
			margin: 0px 50px

		.header-title h2
			margin: 10px 0px

		.header-buttons
			display: block
			float: right
			height: 60px
			margin: 0px 50px

		.header-icon
			display: block
			float: left
			height: 60px
			width: 60px
			text-align: center
			cursor: pointer;

		.header-circle
			display: block
			float: left
			background-color: black
			border-radius: 50%
			-moz-border-radius: 50%;
			-webkit-border-radius: 50%;
			width: 40px
			height: 40px
			margin: 0px 10px
			text-align:center
			font-size: 24px
			line-height: 44px
			color: #FFD300 // yellow

		.icon-text 
			display: block
			float: left
			width: 60px
			margin: 0px
			font-size: 10pt

		.footer
			margin: 0px 0px _margin_top 0px

		.control-label
			font-weight: bold

		.question-list
			width: 700px
			display: block
			padding: 10px
			margin: 0px auto;

		.question-tile
			width: 500px
			height: 140px
			margin: 20px auto
			display: block

		.question-tile-left
			width: 400px
			height: 100%
			display: block
			float: left
			background-color: #E6E4E4 // darker grey
			border-top-left-radius: 8px
			border-bottom-left-radius: 8px
			-moz-border-top-left-radius: 8px
			-moz-border-bottom-left-radius: 8px
			-webkit-border-top-left-radius: 8px
			-webkit-border-bottom-left-radius: 8px

		.left-item
			height: 30px
			margin: 7px 15px

		.question-title
			font-weight: bold

		.question-tag
			background: #595959
			-webkit-border-radius: 5
			-moz-border-radius: 5
			border-radius: 5px
			color: white
			font-size: 16px
			padding: 2px 10px
			margin-right: 10px
			display: block
			float: left
			text-decoration: none

		.question-tag:hover
			opacity: 0.75
			cursor: pointer;

		.question-tile-right
			width: 100px
			height: 100%
			display: block
			float: left
			background-color: #D0CFCF // light grey
			border-top-right-radius: 8px
			border-bottom-right-radius: 8px
			-moz-border-top-right-radius: 8px
			-moz-border-bottom-right-radius: 8px
			-webkit-border-top-right-radius: 8px
			-webkit-border-bottom-right-radius: 8px

		.question-circle
			display: block
			background-color: black
			border-radius: 50%
			-moz-border-radius: 50%;
			-webkit-border-radius: 50%;
			width: 80px
			height: 80px
			margin: 10px 10px
			text-align:center
			font-size: 50px;
			line-height: 80px;
			color: #D0CFCF // light grey

		.overlay
			opacity: 0.5
			background: #000
			width: 100%
			height: 100%
			z-index: 10
			top: 0
			left: 0
			position: fixed

		.ask-question-popup
			display: block
			position: absolute
			top: 50%
			left: 50%
			margin-top: -162px
			margin-left: -200px
			height: 325px
			width: 400px
			padding: 5px
			z-index: 100
			background: #FFFFFF
			border-radius: 10px
			border: 3px solid #D0CFCF

		.searching-for-tutor
			text-align: center
			padding: 20px
			width: 700px
			margin: 0px auto
			margin-top: 30px
			background-color: #FFFFBE
			border-radius: 10px
			font-size: 16px

	#tutoringSession

		.sidebar
			background: black

		#header {
		  position: fixed;
		  top: 0px;
		  left: 0px;
		  color: rgb(220, 220, 220);
		  border-bottom: 1px solid rgb(100, 100, 100);
		  padding: 15px 5px 5px 10px;
		  width: 100%;
		}

		#header #heading {
		  float: left;
		  width: 300px;
		}

		#header #controls {
		  float: left;
		  width: 600px;
		  text-align: right;
		  padding-right: 20px;
		  margin-left: 40px;
		}

		#header #heading h1 {
		  font-size: 28px;
		  line-height: 25px;
		  margin: 0px 0px 8px 0px;
		  float: left;
		}

		#header #heading h2 {
		  margin-bottom: 10px;
		  font-size: 16px;
		  line-height: 16px;
		  font-weight: normal;
		}

		#header #heading h2 a {
		  color: inherit;
		  text-decoration: none;
		  font-weight: bold;
		  border-bottom: 1px dashed white;
		}

		.nickname {
		  position: absolute;
		  font-family: 'Arial';
		  padding: 1px 4px 1px 4px;
		  font-size: 13px;
		  border-radius: 3px;
		  border: 2px solid rgb(100, 100, 100);
		  color: white;
		  background-color: black;
		}
