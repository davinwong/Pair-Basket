@import 'utility'

body
	background: light-grey 

	.container.main
		width: 800px
		padding: 50px
		background: white
		border-radius(3px)
		container-border()

	.header
		// margin: _margin_top 0px 0px 0px
		width: 100%
		height: 60px
		background-color: #FFD300 // yellow
		// float: left

	.header-content
		width: 980px
		height: 60px
		display: block
		margin: auto

	.header-title
		display: block
		float: left
		height: 60px
		margin: 0px 50px

	.header-title h2
		margin: 10px 0px

	.circle {
		display: block
		float: left
		background-color: black
		border-radius: 50%;
		width: 50px;
		height: 50px;
		text-align:center;
		font-size: 36px
		line-height: 50px
		color: #FFD300 // yellow
	}

	.footer
		margin: 0px 0px _margin_top 0px

	.control-label
		font-weight: bold