@import 'utility'

body
	.question-list
		width: 700px
		display: block
		padding: 10px
		margin: 0px auto;

	.question-tile
		width: 500px
		height: 140px
		margin: 20px auto
		display: block

	.question-tile-left
		width: 400px
		height: 100%
		display: block
		float: left
		background-color: #E6E4E4 // darker grey
		border-top-left-radius: 8px
		border-bottom-left-radius: 8px
		-moz-border-top-left-radius: 8px
		-moz-border-bottom-left-radius: 8px
		-webkit-border-top-left-radius: 8px
		-webkit-border-bottom-left-radius: 8px

	.left-item
		width: 100%
		height: 30px
		margin: 7px 15px

	.question-title
		font-weight: bold

	.question-tag
		background: #595959
		-webkit-border-radius: 5
		-moz-border-radius: 5
		border-radius: 5px
		color: white
		font-size: 16px
		padding: 2px 10px
		margin-right: 10px
		display: block
		float: left
		text-decoration: none

	.question-tag:hover
		opacity: 0.75
		cursor: pointer;

	.question-tile-right
		width: 100px
		height: 100%
		display: block
		float: left
		background-color: #D0CFCF // light grey
		border-top-right-radius: 8px
		border-bottom-right-radius: 8px
		-moz-border-top-right-radius: 8px
		-moz-border-bottom-right-radius: 8px
		-webkit-border-top-right-radius: 8px
		-webkit-border-bottom-right-radius: 8px

	.question-circle
		display: block
		background-color: black
		border-radius: 50%
		-moz-border-radius: 50%;
		-webkit-border-radius: 50%;
		width: 80px
		height: 80px
		margin: 10px 10px
		text-align:center
		font-size: 50px;
		line-height: 80px;
		color: #D0CFCF // light grey
